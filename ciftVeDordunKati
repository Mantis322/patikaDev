// hata ayıklaması gözardı edilmiştir.

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int k, bolunebilen = 0;

        Scanner inp = new Scanner(System.in);

        do{
            System.out.print("Lütfen sayı giriniz(tek sayı girildiğinde döngü biter): ");
            k = inp.nextInt();
            if (k % 4 ==0){
                bolunebilen += k;
            }
        }while (k % 2 != 1);

        System.out.println("Girilen sayıların toplamı: " + bolunebilen);
    }
}
